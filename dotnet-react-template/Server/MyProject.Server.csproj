<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    <WarningsAsErrors>CS0618</WarningsAsErrors>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>

    <!-- SpaYarp configuration -->
    <SpaRoot>../Client</SpaRoot>
    <SpaClientUrl>http://localhost:#{ReactPort}#</SpaClientUrl>
    <SpaLaunchCommand>yarn dev</SpaLaunchCommand>
    <!-- Change the timeout of the proxy (defaults to 120 seconds) -->
    <SpaProxyTimeoutInSeconds>1200</SpaProxyTimeoutInSeconds>
    <!-- Optionally forward only request starting with the specified path 
     <SpaPublicPath>/dist</SpaPublicPath> -->
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="8.0.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.4.0" />
    <PackageReference Include="AspNetCore.SpaYarp" Version="2.0.1" />
  </ItemGroup>

</Project>
